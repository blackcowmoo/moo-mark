{
  "extends": [
    "../.eslintrc",
    "plugin:react/recommended"
  ],
  "ignorePatterns": [
    "dist/",
    "build/"
  ],
  "settings": {
    "import/resolver": {
      "babel-module": {},
      "alias": {
        "map": [
          [
            "@",
            "./"
          ]
        ],
        "extensions": [
          ".ts",
          ".tsx",
          ".js",
          ".jsx",
          ".scss"
        ]
      }
    }
  },
  "rules": {
    "react/react-in-jsx-scope": "off"
  }
}